<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../Styles/Default.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="morogoro_lims.controller.technical.BookTable">
   <children>
      <VBox prefHeight="410.0" prefWidth="620.0" spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@../Image/search-icon.png" />
                     </image>
                  </ImageView>
                  <TextField fx:id="searchBook" onKeyReleased="#onSearchBook" promptText="Tafuta kitabu kwa namba, jina, kategori, mchapishaji" styleClass="textfield" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="numberCol" prefWidth="75.0" text="Namba" />
                <TableColumn fx:id="titleCol" prefWidth="75.0" text="Jina" />
                  <TableColumn fx:id="categoryCol" prefWidth="75.0" text="Kategori" />
                  <TableColumn fx:id="editionCol" prefWidth="75.0" text="Chapisho" />
                  <TableColumn fx:id="publisherCol" prefWidth="123.0" text="Mchapishaji" />
                  <TableColumn fx:id="copiesCol" prefWidth="88.0" text="Idadi" />
                  <TableColumn fx:id="isbnCol" prefWidth="88.0" text="ISBN" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
